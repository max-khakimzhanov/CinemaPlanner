@model CinemaPlanner.Web.Models.Movie

<div class="card h-100">
    @if (!string.IsNullOrEmpty(Model.PosterUrl))
    {
        <img src="@Url.Action("Poster", "Movies", new { id = Model.Id })" class="card-img-top" alt="@Model.DisplayTitle poster" style="height:200px; object-fit:cover;" />
    }
    <div class="card-body">
        <h5 class="card-title">@Model.DisplayTitle</h5>
        <p class="card-text">
            Duration: @Model.DurationLabel
        </p>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">Details</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">Delete</a>
    </div>
</div>
