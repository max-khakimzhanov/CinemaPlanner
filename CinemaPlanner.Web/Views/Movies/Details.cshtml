@model CinemaPlanner.Web.Dtos.MovieDetailDto
@{
    ViewData["Title"] = "Movie Details";
}

<h1>Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.DurationMinutes min</dd>

        <dt class="col-sm-2">Release Year</dt>
        <dd class="col-sm-10">@Model.ReleaseYear</dd>

        @if (!string.IsNullOrEmpty(Model.PosterUrl))
        {
            <dt class="col-sm-2">Poster</dt>
            <dd class="col-sm-10">
                <img src="@Url.Action("Poster", "Movies", new { id = Model.Id })" alt="Poster" class="img-thumbnail" style="max-height:250px;" />
            </dd>
        }
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
