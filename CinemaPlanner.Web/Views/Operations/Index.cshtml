@model CinemaPlanner.Web.Models.OperationsDashboardViewModel
@{
    ViewData["Title"] = "Operations";
}

<h1>Operations Overview</h1>
<p class="text-muted">Live cues for upcoming screenings, admin actions, and trailer sequencing.</p>

<div class="row">
    <div class="col-md-4">
        <h3>Waiting List</h3>
        @if (Model.WaitingList.Any())
        {
            <p>Next in line: <strong>@Model.NextInLine</strong></p>
            <ul class="list-group">
                @foreach (var person in Model.WaitingList)
                {
                    <li class="list-group-item">@person</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No waiting list yet.</p>
        }
    </div>
    <div class="col-md-4">
        <h3>Recent Admin Actions</h3>
        @if (Model.UndoStack.Any() || !string.IsNullOrEmpty(Model.LastUndo))
        {
            <p>Last undone: <strong>@Model.LastUndo</strong></p>
            <ul class="list-group">
                @foreach (var action in Model.UndoStack)
                {
                    <li class="list-group-item">@action</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No admin actions recorded.</p>
        }
    </div>
    <div class="col-md-4">
        <h3>Trailer Playlist</h3>
        @if (Model.TrailerPlaylist.Any())
        {
            <p>Highlighted movie: <strong>@Model.HighlightedMovie</strong></p>
            <ul class="list-group">
                @foreach (var trailer in Model.TrailerPlaylist)
                {
                    <li class="list-group-item">@trailer</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No trailers scheduled.</p>
        }
    </div>
</div>
